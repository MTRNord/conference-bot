{
  "extends": "@tsconfig/node18",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "useUnknownInCatchVariables": false,
    "sourceMap": true,
    "outDir": "./lib",
    "types": [
      "node"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
